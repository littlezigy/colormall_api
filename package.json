{
  "name": "ecommerce-api",
  "version": "1.0.0",
  "description": "An ecommerce project",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production & node ./bin/www.js",
    "tests": "./.env.sh &&  NODE_ENV=devtest jest --runInBand --detectOpenHandles",
    "test:watch": "NODE_ENV=test & jest --watch --runInBand --verbose --forceExit --detectOpenHandles",
    "test": "npm run tests",
    "dev": ". ./.env.sh & NODE_ENV=development && nodemon --exec 'NODE_ENV=devtest jest --runInBand --detectOpenHandles --silent' &&  nodemon ./bin/www.js",
    "dev:test": "./.env.sh &&  nodemon --exec 'NODE_ENV=devtest jest ./test/unit.tests ./test/integration.tests --runInBand --detectOpenHandles'"
  },
  "author": "Adesuwa T. Dawodu",
  "license": "ISC",
  "dependencies": {
    "@littlezigy/zipobject": "^1.0.1",
    "bcrypt-node": "^0.1.0",
    "cloudinary": "^1.17.0",
    "connect-pg-simple": "^6.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-session": "^1.17.0",
    "faker": "^4.1.0",
    "helmet": "^3.21.2",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.14.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  }
}
